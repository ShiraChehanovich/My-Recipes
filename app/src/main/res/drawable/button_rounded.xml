<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#46eb7d" /> <!-- Set the background color of the button when pressed -->
            <corners android:radius="10dp" /> <!-- Adjust the radius to control the roundness of the button -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set the default background color of the button -->
            <stroke android:color="#008080" android:width="6dp" /> <!-- Set the stroke color and width -->
            <corners android:radius="10dp" /> <!-- Adjust the radius to control the roundness of the button -->
        </shape>
    </item>
</selector>
